<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_final.DestinatiiShowPage"
             Title="Destinatii Oferite"
             BackgroundImage="index.jpg"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <ListView x:Name="listView" Margin="20" ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Oras}" Detail="{Binding Tara}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
